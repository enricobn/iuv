package org.iuv.test.client

import org.iuv.core.Authentication
import org.iuv.core.MultipartFile
import org.iuv.shared.Task
import org.iuv.test.models.ApiResponse
import org.iuv.test.models.Order
import org.iuv.test.models.Pet
import org.iuv.test.models.User

interface PetStoreApi {
    fun authenticate(authentication: Authentication)

    fun addPet(body : Pet) : Task<String,Pet>

    fun updatePet(body : Pet) : Task<String,Pet>

    /**
     * Multiple status values can be provided with comma separated strings
     *
     * @param status Status values that need to be considered for filter
     */
    fun findPetsByStatus(status : List<String>) : Task<String,List<Pet>>

    /**
     * Multiple tags can be provided with comma separated strings. Use tag1, tag2, tag3 for testing.
     *
     * @param tags Tags to filter by
     */
    fun findPetsByTags(tags : List<String>) : Task<String,List<Pet>>

    /**
     * Returns a single pet
     *
     * @param petId ID of pet to return
     */
    fun getPetById(petId : Long) : Task<String,Pet>

    /**
     *
     * @param petId ID of pet that needs to be updated
     * @param name Updated name of the pet
     * @param status Updated status of the pet
     */
    fun updatePetWithForm(petId : Long, name : String?, status : String?) : Task<String,Unit>

    /**
     *
     * @param petId Pet id to delete
     */
    fun deletePet(api_key : String?, petId : Long) : Task<String,Unit>

    /**
     *
     * @param petId ID of pet to update
     * @param additionalMetadata Additional data to pass to server
     * @param file file to upload
     */
    fun uploadFile(petId : Long, additionalMetadata : String?, file : MultipartFile?) : Task<String,ApiResponse>

    /**
     * Returns a map of status codes to quantities
     *
     */
    fun getInventory() : Task<String,Map<String, Int>>

    fun placeOrder(body : Order) : Task<String,Order>

    /**
     * For valid response try integer IDs with value >= 1 and <= 10. Other values will generated exceptions
     *
     * @param orderId ID of pet that needs to be fetched
     */
    fun getOrderById(orderId : Long) : Task<String,Order>

    /**
     * For valid response try integer IDs with positive integer value. Negative or non-integer values will generate API errors
     *
     * @param orderId ID of the order that needs to be deleted
     */
    fun deleteOrder(orderId : Long) : Task<String,Unit>

    /**
     * This can only be done by the logged in user.
     *
     */
    fun createUser(body : User) : Task<String,Unit>

    fun createUsersWithArrayInput(body : List<User>) : Task<String,Unit>

    fun createUsersWithListInput(body : List<User>) : Task<String,Unit>

    /**
     *
     * @param username The user name for login
     * @param password The password for login in clear text
     */
    fun loginUser(username : String, password : String) : Task<String,String>

    fun logoutUser() : Task<String,Unit>

    /**
     *
     * @param username The name that needs to be fetched. Use user1 for testing.
     */
    fun getUserByName(username : String) : Task<String,User>

    /**
     * This can only be done by the logged in user.
     *
     * @param username name that need to be updated
     */
    fun updateUser(username : String, body : User) : Task<String,User>

    /**
     * This can only be done by the logged in user.
     *
     * @param username The name that needs to be deleted
     */
    fun deleteUser(username : String) : Task<String,Unit>

}